@model IEnumerable<DTPReg4.Models.Type>
@{
    ViewBag.Title = "Каталог правопорушень";
}
<h2>Тип правопорушення</h2>
<table>
    <tr>
        <th>Назва</th>
        <th>Покарання</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Punishment)
            </td>
            <td>
                @Html.ActionLink("Переглянути", "TypeDetails", new { id = item.Id })
</tr>
    }
</table>
<p>
    @Html.ActionLink("Список порушників", "Index")
</p>